@using TravelTripProject.Models.Siniflar
@model List<Blog>
<div class="con-bot" style="width:1050px;">
    @foreach(var x in Model) {
    <div class="left">
        <div class="bot-left">
            <img src="@x.BlogImage" style="height:200px; width:300px;" alt="" />
        </div>
        <div class="left-text">
            <h4>@x.Baslik</h4>
            <span class="doller">@x.Tarih.ToString("dd.MM.yyyy")</span>
            <p>@x.Aciklama.Substring(0, 80)...</p>
            <p><a href="/Blog/BlogDetay/@x.Id"><span class="read">Devamını Oku</span></a></p>
        </div>
    </div>
    }
    <div class="clear"></div>
</div>